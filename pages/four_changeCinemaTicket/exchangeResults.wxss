@import "../../common/common.wxss";

page {
  background-color: white;
}

image.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -2;
  top: 0;
  left: 0;
}

.exchange_head {
  width: 100%;
  height: 700rpx;
  text-align: center;
}

.exchange_head  image:first-child {
  width: 160rpx;
  height: 160rpx;
  margin-top: 30rpx;
  border-radius: 50%;
}

.exchange_head view.userGetGift {
  color: #ac6944;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  margin-top: 10rpx;
}

.exchange_head image:last-child {
  width: 325rpx;
  height: 164rpx;
  margin-top: 33rpx;
}

.exchange_results>image {
  position: absolute;
  width: 100%;
  bottom: 0;
  z-index: -1;
}

.exchange_speed {
  position: relative;
  color: white;
  height: auto;
  width: 100%;
  background-color: #ed5141;
  text-align: center;
}

.exchange_speed_content>text {
  position: absolute;
  width: 300rpx;
  z-index: 0;
  left: 50%;
  margin-left: -150rpx;
  font-size: 30rpx;
  top: 55rpx;
}

.exchange_speed_content>image {
  position: absolute;
  z-index: -1;
  width: 670rpx;
  height: 100rpx;
  left: 50%;
  margin-left: -335rpx;
  top: 40rpx;
}

.exchange_speed_content {
  position: absolute;
  width: 100%;
  z-index: 1;
  background-color: #ed5141;
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}

.received_list {
  width: 620rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80rpx;
  background-color:white;
  box-shadow: 0 2px 6px 0 rgba(255, 255, 255, 0.84);
  padding-bottom: 20rpx;
}

.received_list_item {
  position: relative;
  background-color: white;
  width: 620rpx;
  min-height: 126rpx;
  height: auto;
  line-height: 126rpx;
  color: #6f6f6f;
  box-sizing: border-box;
  font-size: 24rpx;
  display: block;
  padding: 0;
  padding-top: 20rpx;
  text-align: left;
}

.received_list_item>view {
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
  font-size: 24rpx;
  height: auto;
  display: inline-block;
  vertical-align: middle;
  margin: 0;
}

.received_list_item>view:first-child {
  font-size: 30rpx;
  /* position: absolute; *//* left: 0; */
  width: 214rpx;
  padding: 0 20rpx 0 40rpx;
  box-sizing: border-box;
  line-height: 36rpx;
}

.time_center {
  width: 248rpx;
  font-size: 18rpx;
  line-height: 24rpx;
  /* margin-left: 220rpx; */
}

.received_list_item>view:last-child {
  /* position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -35rpx; *//* height: 70rpx; */
  width: 100rpx;
  font-size: 30rpx;
  color: #ffbe07;
  line-height: 36rpx;

  margin-left: 40rpx;
  /* line-height: 70rpx; */
}

.exchange_speed_content  .buttonView {
  width: 100%;
  height: 1rpx;
  margin-top: 140rpx;
}

.exchange_speed_content  view button {
  display: block;
  width: 630rpx;
  height: 90rpx;
  line-height: 90rpx;
  bottom: 80rpx;
  background-color: #ffbe07;
  color: white;
  font-size: 32rpx;
}

button:active {
  opacity: 0.8;
}

.button_tip {
  position: relative;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  margin-top: 18rpx;
}

.instruction {
  font-size: 40rpx;
  margin-top: 70rpx;
}

.instruction>.title {
  height: 2rpx;
  line-height: 0;
  width: 240rpx;
  font-size: 30rpx;
  border-left: 220rpx solid white;
  border-right: 220rpx solid white;
  margin: 17rpx auto;
}

.content>view {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #fff;
  line-height: 46rpx;
  text-align: left;
}

view.instruction>.content {
  margin-top: 34rpx;
  text-align: left;
}

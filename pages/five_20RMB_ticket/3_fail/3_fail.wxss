
body {
  font-family: PingFangSC-Regular;
}

.ticket_img {
  position: absolute;
  z-index: -2;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.receive_button_img {
  position: absolute;
  z-index: -1;
  width: 90%;
  height: 60rpx;
  bottom: 100rpx;
}

.congratulation {
  width: 100%;
  font-family: PingFangSC-Semibold;
  font-size: 60rpx;
  color: #f23838;
  margin: 0 auto;
  text-align: center;
  margin-top: 40rpx;
  font-weight: bold;
}

.minus20 {
  width: 100%;
  margin: 0 auto;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 48rpx;
  color: #453d38;
  margin-top: 20rpx;
}

button.receive_button {
  position: absolute;
  bottom: 15%;
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  background: #f23838;
  color: #fff;
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  margin-left: 10%;
}
button:active{
  opacity: 0.8;
}